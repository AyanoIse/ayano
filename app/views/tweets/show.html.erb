
<h1>投稿詳細</h1>
<div class="tweet">
  <p><%= @tweets.body %></p>
  <p><%= @tweets.created_at %></p>
  <% if user_signed_in? %>
      <% if current_user.already_gooded?(@tweets) %>
        <%= link_to tweet_good_path(@tweets), method: :delete do %>
          <p>いいねを取り消す</p><%= @tweets.goods.count %>
        <% end %>
      <% else %>
        <%= link_to tweet_goods_path(@tweets), method: :post do %>
          <p>いいね</p><%= @tweets.goods.count %>
        <% end %>
      <% end %>
    <% else %>
      <p>いいねの数 = </p><%= @tweets.goods.count %>
    <% end %>
</div>

<h2>いいねしたユーザー</h2>
<% @tweets.gooded_users.each do |user| %>
  <li><%= user.email %></li>
<% end %>

<div class="letter-wrapper">
  <p>コメント一覧</p>
  <% @letters.each do |c| %>
    <div>
      <%= c.user.email unless c.user.blank? %>
      <br>
      <%= c.content %>
    </div>
      <br>
  <% end %>

  <% if user_signed_in? %>
    <%= form_with(model: [@tweets, @letter], local: true) do |f| %>
      <%= f.text_area :content %>
      <%= button_tag type: "submit" do %>
        <i class="far fa-letters"></i> コメントする
      <% end %>
    <% end %>
  <% end %>
</div>

<%= link_to "投稿一覧に戻る", tweets_path %>
<%= link_to "編集する", edit_tweet_path(@tweets.id) %>