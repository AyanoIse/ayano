
<div class="edit-user">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    
    <div class="user-detail">
  
      <div class="field3">
        <br>
        <%= f.label :｜名前｜ %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name"%>

      </div>


      <div class="field4">
        <br>
        <%= f.label :｜プロフィール画像｜ %>
        <br>
        <%= f.file_field :image %>
      </div>

      <div class="field5">
        <br>
        <%= f.label :｜プロフィール｜ %><br />
        <%= f.text_area :profile, autofocus: true %>
      </div>



      <div class="field6">
        <br>
        <%= f.label :｜メールアドレス｜ %><br />

        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field7">
        <br>
        <%= f.label :｜パスワード｜ %> <i>(変更なければ入力なしで〇)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em>*<%= @minimum_password_length %> 文字以上</em>
        <% end %>
      </div>

      <div class="field8">
        <br>
        <%= f.label :｜新しいパスワード｜ %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field9">
        <br>
        <%= f.label :｜確認用パスワード再入力 %><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <br>
        <%= f.submit "更新する" %>
      </div>
    </div>
  <% end %>
</div>

<%= button_to "アカウント消去", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

<%= link_to "マイページへ戻る", :back %>
